<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:minHeight="50dp">

    <TextView
        android:id="@+id/menuitem_sortnumber"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/noecard_orange_dark"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:text="T380"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/allbutnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/menuitem_sortnumber"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/menuitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/vis_right_elements"
            android:text="TSchloss Artstetten  test test test test test test test"
            android:textColor="@color/noecard_orange_dark"
            android:textSize="16sp"
            android:typeface="sans"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/menuitem_untertitel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuitem_name"
            android:layout_marginTop="1dip"
            android:text="TArtstetten"
            android:textColor="#343434"
            android:textSize="14sp" />
        <RelativeLayout
            android:id="@+id/vis_right_elements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/menuitem_visiteddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T2016-01-01"
                android:textColor="#343434"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/menuitem_ersparnis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuitem_visiteddate"
                android:text="T â‚¬ 18,00"
                android:textColor="#343434"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>